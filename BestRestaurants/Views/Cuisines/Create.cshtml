@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Cuisine

<h1>Add a new cuisine</h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
  <input type="submit" value="Add new cuisine" class="btn btn-primary mt-3 mb-3" />
}
<p>@Html.ActionLink("Show all cuisines", "Index")</p>